<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mycom.hims.MainStaffActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <ImageView
    android:layout_marginTop="20dp"
    android:layout_marginLeft="13dp"
    android:layout_width="20dp"
    android:layout_height="32dp"
    android:src="@drawable/page_1"
    />

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="64dp"
        android:layout_height="32dp"
        android:layout_marginLeft="40dp"
        android:gravity="right"
        android:id="@+id/tv_energy"
        android:textSize="27sp"

        />

     <RelativeLayout
         android:background="@drawable/logout_background"
         android:id="@+id/rel_logout"
         android:layout_marginTop="8dp"
         android:layout_width="137dp"
         android:layout_height="53dp"
         android:layout_marginLeft="175dp"
         >

         <ImageView
             android:id="@+id/iv_logout"
             android:layout_marginTop="13dp"
             android:layout_marginBottom="10dp"
             android:layout_marginLeft="14dp"
             android:layout_width="31dp"
             android:layout_height="30dp"
             android:src="@drawable/logout_icon"
             />

         <TextView
             android:id="@+id/tv_logout"
             android:layout_marginLeft="53dp"
             android:layout_marginTop="6dp"
             android:layout_width="70dp"
             android:layout_height="38dp"
             android:textSize="24sp"
             android:text="logout"

             />

     </RelativeLayout>


    <com.example.mycom.hims.View.CustomDigitalClock
        android:layout_width="169dp"
        android:layout_height="74dp"
        android:id="@+id/tv_time"
        android:layout_marginTop="68dp"
        android:layout_marginLeft="11dp"
        android:textSize="67sp"
        android:textColor="@color/white"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:textSize="37sp"
        android:textColor="@color/white"
        android:id="@+id/tv_date"
        android:layout_marginTop="143dp"
        android:layout_marginLeft="11dp"
        />

    <Button
        android:textSize="40sp"
        android:layout_marginTop="197dp"
        android:id="@+id/btn_radio"
        android:text="@string/radio"
        android:layout_width="160dp"
        android:layout_height="123dp"
        android:background="@color/radioButtonColor"
        />

    <Button
        android:layout_marginLeft="160dp"
        android:textSize="40sp"
        android:layout_marginTop="197dp"
        android:id="@+id/btn_room"
        android:text="@string/room"
        android:layout_width="160dp"
        android:layout_height="123dp"
        android:background="@color/roomButtonColor"
        />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
