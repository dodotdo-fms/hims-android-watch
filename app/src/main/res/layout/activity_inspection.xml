<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mycom.hims.scheduler.InspectionActivity"
    android:background="#000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@drawable/blackbar"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/room_time"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#9a9ca6"
            android:paddingTop="2px"
            android:paddingRight="8px"
            android:textSize = "11pt"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="101"
            android:id="@+id/room_number"
            android:textColor="#F91243"
            android:paddingTop="2px"
            android:layout_marginLeft="85dp"
            android:textSize = "11pt"
            />
    </RelativeLayout>

    <ImageView
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/room_back"
        android:onClick="back_click"
        android:src="@drawable/back"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp" />





    <TextView
        android:layout_width="304dp"
        android:layout_height="33dp"
        android:text="Douglas Neizke"
        android:id="@+id/emp_name"
        android:textSize = "8pt"
        android:textColor="#9a9ca6"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="16dp"
        />

    <ImageView
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:id="@+id/s_form"
        android:src="@drawable/shortform_g"
        android:onClick="onClick"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="18dp"
       />

    <ImageView
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:id="@+id/l_form"
        android:onClick="onClick"
        android:src="@drawable/longform_g"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="18dp"
        />


</RelativeLayout>
